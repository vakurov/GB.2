<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NewStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CDC8D5</item>
        <item name="colorPrimaryVariant">#BEC0CF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BDC0CF</item>
        <item name="colorSecondaryVariant">#AFB3CC</item>
        <item name="colorOnSecondary">#D6CECE</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btnStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:backgroundTint">#6C6C6C</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>