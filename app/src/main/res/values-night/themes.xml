<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GB2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#434245</item>
        <item name="colorPrimaryVariant">#434245</item>
        <item name="colorOnPrimary">#434245</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#434245</item>
        <item name="colorSecondaryVariant">#434245</item>
        <item name="colorOnSecondary">#373639</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorBackgroundFloating</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btnStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>